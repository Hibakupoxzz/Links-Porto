---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, Helvetica, sans-serif;
        background: #0f0f0f;
        color: #fafafa;
        line-height: 1.6;
        min-height: 100vh;
      }

      .container {
        max-width: 750px;
        margin: 0 auto;
        padding: 20px;
      }

      /* Header */
      header {
        padding: 48px 0px 38px;
        border-bottom: 1px solid rgba(139, 92, 246, 0.2);
      }

      .header-content {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        margin-bottom: 24px;
        text-align: center;
      }

      .profile-image {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        background: linear-gradient(135deg, #4a4a4a, #2a2a2a);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 32px;
        color: #fff;
        flex-shrink: 0;
        box-shadow: 0 8px 32px rgba(139, 92, 246, 0.4);
        border: 2px solid rgba(139, 92, 246, 0.3);
      }

      .profile-image img {
        width: 100%;
        height: 100%;
        border-radius: 12px;
        object-fit: cover;
      }

      h1 {
        font-size: 42px;
        font-weight: bold;
        color: #fafafa;
      }

      h1 .highlight {
        background: linear-gradient(135deg, #a78bfa, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .subtitle {
        font-size: 18px;
        color: #a6a6a6;
        margin-top: 8px;
        display: flex;
        justify-content: center;
      }
      
      a {
        display: flex;
        justify-content: center;
        font-size: 18px;
        color: #a6a6a6;
      }

      /* Links Section */
      .links-section {
        padding: 30px 0;
      }

      .link-group {
        margin-bottom: 48px;
      }

      .category-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
      }

      .category-icon {
        width: 20px;
        height: 20px;
        color: #a78bfa;
      }

      .category-title {
        font-size: 18px;
        font-weight: 600;
        color: #fafafa;
      }

      .link-list {
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      .link-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 16px;
        background: rgba(30, 30, 30, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid #2a2a2a;
        border-radius: 8px;
        text-decoration: none;
        color: #fafafa;
        transition: all 0.2s ease;
      }

      .link-content {
          display: flex;
          align-items: center;
          gap: 12px;
          flex: 1;
      }

      .link-icon {
        width: 20px;
        height: 20px;
        color: #a78bfa;
        flex-shrink: 0;
        transition: color 0.2s ease;
      }

      .link-card:hover {
        border-color: #8b5cf6;
        background: rgba(139, 92, 246, 0.1);
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(139, 92, 246, 0.3);
      }

      .link-card:hover .link-name {
        color: #a78bfa;
      }

      .link-card:hover .link-icon {
        color: #c4b5fd;
      }

      .link-name {
          transition: color 0.2s ease;
          font-family: Arial, Helvetica, sans-serif;
          font-size: 15px;
      }

      .link-arrow {
        color: #a78bfa;
        font-size: 14px;
        font-weight: bold;
      }

      .link-text {
          display: flex;
          flex-direction: column;
          gap: 2px;
          min-width: 0;
      }

      .link-description {
          font-family: Arial, Helvetica, sans-serif;
          font-size: 13px;
          color: #737373;
          font-weight: normal;
          line-height: 1.3;
      }

      .link-card:hover .link-description {
          color: #8b5cf6;
      }

      /* Responsive */
      @media (max-width: 640px) {
        .container {
          padding: 16px;
        }

        header {
          padding: 32px 0;
        }

        h1 {
          font-size: 28px;
        }

        .subtitle {
          font-size: 16px;
        }

        .profile-image {
          width: 64px;
          height: 64px;
          font-size: 24px;
        }

        .category-title {
          font-size: 16px;
        }

        .link-card {
          padding: 10px 14px;
        }

        .link-name {
          font-size: 14px;
        }

        .link-icon {
          width: 18px;
          height: 18px;
        }

        .category-icon {
          width: 18px;
          height: 18px;
        }

        .link-group {
          margin-bottom: 36px;
        }
        .link-description {
          font-size: 12px;
        }
      }

      @media (max-width: 480px) {
        h1 {
          font-size: 24px;
        }

        .subtitle {
          font-size: 14px;
        }

        .profile-image {
          width: 56px;
          height: 56px;
          font-size: 20px;
        }

        .links-section {
          padding: 32px 0;
        }


      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
